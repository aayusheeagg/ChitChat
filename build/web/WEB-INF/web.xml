<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <listener>
        <description>ServletContextListener, HttpSessionListener</description>
        <listener-class>com.chitchat.Social</listener-class>
    </listener>
    <servlet>
        <servlet-name>AddUser</servlet-name>
        <servlet-class>com.chitchat.AddUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HibManager</servlet-name>
        <servlet-class>HibManager</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Validate</servlet-name>
        <servlet-class>com.chitchat.Validate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RequestManager</servlet-name>
        <servlet-class>com.chitchat.RequestManager</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChatManager</servlet-name>
        <servlet-class>com.chitchat.ChatManager</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateUser</servlet-name>
        <servlet-class>com.chitchat.UpdateUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddUser</servlet-name>
        <url-pattern>/AddUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HibManager</servlet-name>
        <url-pattern>/HibManager</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Validate</servlet-name>
        <url-pattern>/Validate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RequestManager</servlet-name>
        <url-pattern>/RequestManager</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChatManager</servlet-name>
        <url-pattern>/ChatManager</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateUser</servlet-name>
        <url-pattern>/UpdateUser</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>500</error-code>
        <location>/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/error.jsp</location>
    </error-page>
    <jsp-config>
        <jsp-property-group>
            <display-name>headerInfo</display-name>
            <url-pattern>/index.jsp</url-pattern>
            <url-pattern>/error.jsp</url-pattern>
            <url-pattern>/chat.jsp</url-pattern>
            <url-pattern>/menu.jsp</url-pattern>
            <url-pattern>/configure.jsp</url-pattern>
            <url-pattern>/SignUp.jsp</url-pattern>
            <include-prelude>/WEB-INF/jspf/header.jspf</include-prelude>
        </jsp-property-group>
    </jsp-config>
</web-app>
